# Staging Environment Variables

# Database
DATABASE_URL="postgresql://user:password@staging-db.example.com:5432/collabconnect_staging"

# NextAuth
NEXTAUTH_URL="https://staging.collab-connect.com"
NEXTAUTH_SECRET="your-staging-secret-key-min-32-chars-different-from-prod"

# Email (Resend)
RESEND_API_KEY="re_staging_xxxxxxxxxxxxxxxxxxxxx"
EMAIL_FROM="noreply@staging.collab-connect.com"

# Redis (Upstash)
UPSTASH_REDIS_REST_URL="https://your-staging-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-staging-redis-token"

# Sentry
SENTRY_DSN="https://xxxxxxxxxxxxx@sentry.io/xxxxx"
SENTRY_ORG="your-org"
SENTRY_PROJECT="collab-connect-staging"
SENTRY_AUTH_TOKEN="your-staging-auth-token"
NEXT_PUBLIC_SENTRY_DSN="https://xxxxxxxxxxxxx@sentry.io/xxxxx"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_DEBUG_TOOLS=true

# Map Configuration
NEXT_PUBLIC_MAP_DEFAULT_LAT=37.7749
NEXT_PUBLIC_MAP_DEFAULT_LNG=-122.4194
NEXT_PUBLIC_MAP_DEFAULT_ZOOM=10

# Staging Settings
NODE_ENV=production
LOG_LEVEL=info
RATE_LIMIT_ENABLED=true

# Vercel (if using)
VERCEL_ENV=preview
VERCEL_GIT_COMMIT_SHA=$VERCEL_GIT_COMMIT_SHA
