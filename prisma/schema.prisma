// Courier Connect Database Schema
// Customers book deliveries. Couriers get 70%. We keep 30%. That's it.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========================================
// AUTHENTICATION (NextAuth.js compatible)
// ========================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  password      String?
  name          String?
  phone         String?
  image         String?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  accounts      Account[]
  sessions      Session[]
  courier       Courier?
  notifications Notification[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ========================================
// COURIERS - The folks who do the work
// ========================================

model Courier {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Stripe Connect for payouts
  stripeAccountId   String?  @unique
  stripeOnboarded   Boolean  @default(false)

  // Verification
  isVerified        Boolean  @default(false)
  verifiedAt        DateTime?
  idDocumentUrl     String?

  // Stats
  totalDeliveries   Int      @default(0)
  totalEarnings     Int      @default(0) // in smallest currency unit (cents/haléře)
  rating            Float    @default(5.0)
  ratingCount       Int      @default(0)

  // Availability
  isActive          Boolean  @default(true)
  currentLat        Float?
  currentLng        Float?
  lastLocationUpdate DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  deliveries Delivery[]

  @@index([isActive, isVerified])
  @@index([currentLat, currentLng])
  @@map("couriers")
}

// ========================================
// DELIVERIES - The whole point of this app
// ========================================

model Delivery {
  id String @id @default(cuid())

  // Pickup details
  pickupAddress   String
  pickupLat       Float
  pickupLng       Float
  pickupNotes     String?

  // Dropoff details
  dropoffAddress  String
  dropoffLat      Float
  dropoffLng      Float
  dropoffNotes    String?

  // Scheduling
  scheduledDate   DateTime
  isExpress       Boolean  @default(false)

  // Item info
  itemType        String   // envelope, small_package, medium_package, large_package, fragile
  itemDescription String?

  // Customer (no account needed)
  customerName    String
  customerPhone   String
  customerEmail   String?

  // Pricing (stored in smallest currency unit)
  distanceKm      Float
  currency        String   @default("CZK")
  totalPrice      Int      // What customer pays
  courierPayout   Int      // 70% to courier
  platformFee     Int      // 30% to us

  // Status
  status          DeliveryStatus @default(PENDING)

  // Assignment
  courierId       String?
  courier         Courier?  @relation(fields: [courierId], references: [id])
  acceptedAt      DateTime?
  pickedUpAt      DateTime?
  deliveredAt     DateTime?
  cancelledAt     DateTime?
  cancellationReason String?

  // Payment
  paymentIntentId String?   @unique
  paymentStatus   PaymentStatus @default(PENDING)
  paidAt          DateTime?
  payoutId        String?
  paidOutAt       DateTime?

  // Tracking
  trackingCode    String    @unique @default(cuid())

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([status])
  @@index([courierId])
  @@index([trackingCode])
  @@index([scheduledDate])
  @@map("deliveries")
}

enum DeliveryStatus {
  PENDING      // Customer submitted, waiting for courier
  ACCEPTED     // Courier accepted
  PICKED_UP    // Courier has the package
  DELIVERED    // Done!
  CANCELLED    // Something went wrong
}

enum PaymentStatus {
  PENDING      // Awaiting payment
  PAID         // Customer paid
  REFUNDED     // Money returned
  PAYOUT_PENDING // Waiting to pay courier
  PAID_OUT     // Courier received their 70%
}

// ========================================
// NOTIFICATIONS
// ========================================

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  type      String   // job_available, delivery_accepted, delivery_complete, payout_sent
  title     String
  message   String
  link      String?
  data      Json?

  isRead    Boolean  @default(false)
  readAt    DateTime?

  createdAt DateTime @default(now())

  @@index([userId, isRead])
  @@index([createdAt])
  @@map("notifications")
}

// ========================================
// PUSH SUBSCRIPTIONS (for web push)
// ========================================

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  endpoint  String
  p256dh    String
  auth      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  @@unique([userId, endpoint])
  @@index([userId, isActive])
  @@map("push_subscriptions")
}

// ========================================
// WEBHOOK DELIVERIES (for integrations)
// ========================================

model Webhook {
  id          String   @id @default(cuid())
  url         String
  secret      String
  events      String[]
  isActive    Boolean  @default(true)
  description String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  deliveries  WebhookDelivery[]

  @@map("webhooks")
}

model WebhookDelivery {
  id           String   @id @default(cuid())
  webhookId    String
  webhook      Webhook  @relation(fields: [webhookId], references: [id], onDelete: Cascade)

  event        String
  payload      Json
  responseCode Int?
  responseBody String?  @db.Text
  success      Boolean  @default(false)
  attempts     Int      @default(1)

  createdAt    DateTime @default(now())

  @@index([webhookId, success])
  @@map("webhook_deliveries")
}

