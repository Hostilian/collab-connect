# ========================================
# DATABASE
# ========================================
DATABASE_URL="postgresql://username:password@localhost:5432/collab_connect?schema=public"

# ========================================
# AUTHENTICATION
# ========================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"
AUTH_SECRET="your-secret-key-here-generate-with-openssl-rand-base64-32"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# ========================================
# MAP & GEOCODING APIs (All Free/Open Source)
# ========================================

# MapLibre/MapTiler (for beautiful maps)
NEXT_PUBLIC_MAPTILER_KEY="your-maptiler-key-here"
# Get free key at: https://cloud.maptiler.com/

# LocationIQ (geocoding with free tier)
LOCATIONIQ_API_KEY="your-locationiq-key"
# Get free key at: https://locationiq.com/

# OpenCage (geocoding - optional, 2500 free req/day)
OPENCAGE_API_KEY="your-opencage-key"
# Get free key at: https://opencagedata.com/

# IPify is free, no key needed
# ipapi.co is free, no key needed
# Nominatim (OSM) is free, no key needed

# ========================================
# REAL ESTATE & PROPERTY DATA
# ========================================

# Zillow RapidAPI (optional - free tier available)
RAPIDAPI_KEY="your-rapidapi-key"
ZILLOW_API_HOST="zillow-com1.p.rapidapi.com"
# Get free key at: https://rapidapi.com/

# OpenStreetMap Overpass API is free, no key needed
# UK Land Registry is free, no key needed

# ========================================
# TRANSLATION (Multi-language Support)
# ========================================

# LibreTranslate (free, open source)
LIBRETRANSLATE_API_URL="https://libretranslate.com"
# Self-hosted option: https://github.com/LibreTranslate/LibreTranslate

# MyMemory Translation (free tier: 10000 words/day)
MYMEMORY_EMAIL="your-email@example.com"
# Increases free tier limit with email

# ========================================
# COMMUNICATION & CHAT
# ========================================

# Supabase (for realtime chat - free tier generous)
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"
# Get free at: https://supabase.com

# Socket.io runs on your server, no API key needed

# ========================================
# EMAIL SERVICES
# ========================================

# Resend (free tier: 100 emails/day)
RESEND_API_KEY="re_your_api_key_here"
# Get free key at: https://resend.com/api-keys

# ========================================
# MEDIA & ASSETS
# ========================================

# Unsplash (free tier: 50 req/hour)
UNSPLASH_ACCESS_KEY="your-unsplash-access-key"
# Get free key at: https://unsplash.com/developers

# Gravatar is free, no key needed (hash email)

# ========================================
# VERIFICATION & TRANSPARENCY
# ========================================

# Hunter.io Email Verification (free: 25 searches/month)
HUNTER_API_KEY="your-hunter-api-key"
# Get free key at: https://hunter.io/

# OpenCorporates (free tier available)
OPENCORPORATES_API_KEY="your-opencorporates-key"
# Get free key at: https://opencorporates.com/

# ========================================
# RATE LIMITING & CACHING
# ========================================

# Upstash Redis (free tier: 10k commands/day)
UPSTASH_REDIS_REST_URL="your-upstash-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-upstash-redis-token"
# Get free at: https://upstash.com/

# ========================================
# MONITORING & ERRORS
# ========================================

# Sentry (error tracking - free tier generous)
SENTRY_DSN="your-sentry-dsn"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"
# Get free at: https://sentry.io/

# ========================================
# APP CONFIGURATION
# ========================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"
