# Production Environment Variables

# Database
DATABASE_URL="postgresql://user:password@prod-db.example.com:5432/collabconnect_prod"

# NextAuth
NEXTAUTH_URL="https://collab-connect.com"
NEXTAUTH_SECRET="your-production-secret-key-min-32-chars-NEVER-COMMIT-THIS"

# Email (Resend)
RESEND_API_KEY="re_xxxxxxxxxxxxxxxxxxxxx"
EMAIL_FROM="noreply@collab-connect.com"

# Redis (Upstash)
UPSTASH_REDIS_REST_URL="https://your-prod-redis.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-prod-redis-token"

# Sentry
SENTRY_DSN="https://xxxxxxxxxxxxx@sentry.io/xxxxx"
SENTRY_ORG="your-org"
SENTRY_PROJECT="collab-connect"
SENTRY_AUTH_TOKEN="your-prod-auth-token"
NEXT_PUBLIC_SENTRY_DSN="https://xxxxxxxxxxxxx@sentry.io/xxxxx"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_ENABLE_DEBUG_TOOLS=false

# Map Configuration
NEXT_PUBLIC_MAP_DEFAULT_LAT=37.7749
NEXT_PUBLIC_MAP_DEFAULT_LNG=-122.4194
NEXT_PUBLIC_MAP_DEFAULT_ZOOM=10

# Production Settings
NODE_ENV=production
LOG_LEVEL=warn
RATE_LIMIT_ENABLED=true

# Vercel (if using)
VERCEL_ENV=production
VERCEL_GIT_COMMIT_SHA=$VERCEL_GIT_COMMIT_SHA

# Security
ENABLE_CORS=true
ALLOWED_ORIGINS="https://collab-connect.com,https://www.collab-connect.com"
